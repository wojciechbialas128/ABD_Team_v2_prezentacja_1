         //wys³anie pierwszej komendy na slave jest zchrzanione
         command_confirm(5);
         opusc(100);
         otworz();
         podnies(100, command_confirm(5)-2);
      }
      Off(OUT_ABC);
   } while (jest_kontener());
}




