sub BTCheck(int conn){
 while (!BluetoothStatus(conn)==NO_ERR){
 TextOut(5,LCD_LINE2,"Error");
 PlayTone(300,300);
 Wait(300);
 PlayTone(0,300);
 Wait(300);
 }
}

